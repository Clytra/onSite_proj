@model IEnumerable<TopoModel>

@{ 
    ViewBag.Title = "Topo Lista";
    Layout = "_AdminLayout";
}

<table class="table table-bordered table-striped">
    <tr>
        <th class="text-right">Lp.</th>
        <th class="text-center">Obszar</th>
        <th class="text-center">Region wspinaczkowy</th>
        <th class="text-center">Sektor</th>
        <th class="text-center">Skała</th>
        <th class="text-center">Ściana</th>
    </tr>
    @foreach (var row in Model)
    {
        <tr>
            <td>@row.TopoID</td>
            <td>@row.Area</td>
            <td>@row.Region</td>
            <td>@row.Sector</td>
            <td>@row.Rock</td>
            <td>@row.Wall</td>
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-sm btn-warning"
                       asp-route-topoId="@row.TopoID">Edytuj</a>
                    <input type="hidden" name="TopoID" value="@row.TopoID" />
                    <button type="submit" class="btn btn-danger btn-sm">Usuń</button>
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Dodaj rekord</a>
</div>