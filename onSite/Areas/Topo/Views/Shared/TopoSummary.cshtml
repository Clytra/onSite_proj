@model TopoModel


    <head>
        <link rel="stylesheet" asp-href-include="~/css/accordion.css" />
        <script src="~/js/accordion.js"></script>
        <link rel="stylesheet" asp-href-include="~/css/site.css" />
    </head>

@{ int i=0;}
    <div class="card card-outline-primary m-1 p-1">
        <div class="bg-faded p-1">
            <h4>
                @Model.Region
                <span class="badge badge-pill badge-primary" style="float:right">
                    <small>@Model.Routes.Count</small>
                </span>
            </h4>
        </div>
        <span class="card-text p-1">Później dodany opis</span>
        <div class="topoData">
            <div class="panel-group" id="accordion_@i role="tablist" aria-multiselectable="true">
                <div class="panel panel-default" id="panel_@i">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-target="#collapseOne_@i"
                               href="#collapseOne_@i">
                                <i class="glyphicon glyphicon-plus"></i>
                                @Html.DisplayFor(modelItem => Model.Rock)
                            </a>
                        </h4>
                    </div>
                </div>
                <div id="collapseOne_@i" class="panel-collapse collapse in role=tabpanel">
                    <div class="panel-body animated-zoomOut">
                        @Html.DisplayFor(modelItem => Model.Wall)
                    </div>
                    <span class="card-text p-1">
                        <table class="table table-striped table-bordered table-sm">
                            <tr>
                                <th class="text-left">Nazwa</th>
                                <th class="text-center">Asekuracja</th>
                                <th class="text-center">Wycena</th>
                                <th class="text-center">Rok utworzenia</th>
                                <th class="text-center">Autor</th>
                                <th class="text-center">Długość drogi</th>
                                <th class="text-center">Ocena</th>
                                <th class="text-center">Uwagi</th>
                                <th class="text-center">Schemat</th>
                            </tr>
                            @foreach (var row in Model.Routes)
                            {
                                <tr>
                                    <td class="text-left"><strong>@row.Name</strong></td>
                                    <td class="text-center">@row.Assurance</td>
                                    <td class="text-center">@row.Difficulty</td>
                                    <td class="text-center">@row.Year</td>
                                    <td class="text-center">@row.Author</td>
                                    <td class="text-center">@row.Length</td>
                                    <td class="text-center">@row.Rating</td>
                                    <td class="text-center">@row.Description</td>
                                    <td class="text-center">
                                        <form asp-action="DownloadFile" asp-route-id="@row.RouteScheme" method="get">
                                            <a class="btn btn-sm btn-primary" asp-controller="RouteScheme" asp-action="DownloadFile"
                                               asp-route-id="@row.RouteScheme">Pobierz schemat</a>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </table>
                    </span>
                </div>
            </div>
        </div>
    </div>
